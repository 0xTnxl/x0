{
  "name": "@x0-protocol/x0-01",
  "version": "0.1.0",
  "description": "x0-01: The Native Agent Settlement Protocol - SDK and Tooling",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xtnxl/x0"
  },
  "homepage": "https://x0-protocol.io",
  "keywords": [
    "solana",
    "web3",
    "ai-agents",
    "payments",
    "token-2022",
    "defi"
  ],
  "workspaces": [
    "sdk/*"
  ],
  "scripts": {
    "build": "anchor build",
    "test": "anchor test",
    "test:local": "anchor test --skip-local-validator",
    "lint": "eslint sdk --ext .ts",
    "lint:fix": "eslint sdk --ext .ts --fix",
    "format": "prettier --write 'sdk/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'sdk/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf target sdk/*/dist node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/spl-token": "^0.4.6",
    "@solana/web3.js": "^1.95.0",
    "@types/bn.js": "^5.1.5",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "bn.js": "^5.2.1",
    "chai": "^4.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "lenis": "^1.3.17"
  }
}
